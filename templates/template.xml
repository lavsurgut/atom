<html xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
    <head>
        <meta charset="utf-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <meta name="description" content="Atom web application"/>
        <meta name="author" content="lavsurgut"/>
        <link rel="shortcut icon" href=""/>

        <title>Atom UI</title>

        <!-- Bootstrap core CSS -->
        <link href="static/css/bootstrap.min.css" rel="stylesheet"/>


        <!-- Custom styles for this scaffold -->


        <link href="static/css/main.css" rel="stylesheet"/>

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- TODO: add IE check -->
    </head>
    <body>

        <div class="container-fluid">

            <div class="page-header">
                <div id="header1">
                    <div id="header">
                        <h3>ATOM Control</h3>
                    </div>
                    <div t:render="name">
                        <p>Content goes here.</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2" id="sidebar">
                </div>
                <div class="col-md-8" id="content">
                    <div class="row center-block text-center">
                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-6 text-right">
                                    <div id="gg4" class="gauge"></div>
                                </div>
                                <div class="col-xs-6 text-left">
                                    <div id="gg5" class="gauge"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-5 text-right">
                                    <div class="btn-group" role="group" aria-label="...">
                                        <button type="button" class="btn btn-default" id="lft_1">1</button>
                                        <button type="button" class="btn btn-default" id="lft_2">2</button>
                                        <button type="button" class="btn btn-default" id="lft_3">3</button>
                                        <button type="button" class="btn btn-default" id="lft_4">4</button>
                                    </div>
                                </div>
                                <div class="col-xs-2">
                                    <button type="button" id="btn_fwd" class="btn btn-primary">Forward</button>
                                </div>
                                <div class="col-xs-5 text-left">
                                    <div class="btn-group" role="group" aria-label="...">
                                        <button type="button" class="btn btn-default" id="rht_1">1</button>
                                        <button type="button" class="btn btn-default" id="rht_2">2</button>
                                        <button type="button" class="btn btn-default" id="rht_3">3</button>
                                        <button type="button" class="btn btn-default" id="rht_4">4</button>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-5 text-right">
                                    <button type="button" id="btn_lft" class="btn btn-primary">Left</button>
                                </div>
                                <div class="col-xs-2">
                                    <button type="button" id="btn_stp" class="btn btn-danger">Stop</button>
                                </div>
                                <div class="col-xs-5 text-left">
                                    <button type="button" id="btn_rht" class="btn btn-primary">Right</button>
                                </div>
                            </div>
                            <button type="button" id="btn_bck" class="btn btn-primary">Back</button>
                            <div class="row">
                                <div class="col-xs-4 text-center" id="temperature">
                                    <div id="gg1" class="gauge"></div>
                                </div>
                                <div class="col-xs-4 text-center" id="altitude">
                                    <div id="gg2" class="gauge"></div>
                                </div>
                                <div class="col-xs-4 text-center" id="acceleration">
                                    <div id="gg3" class="gauge"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6 text-right">
                                    <button type="button" id="btn_log" class="btn btn-danger">Log data into EEPROM
                                    </button>
                                </div>
                                <div class="col-xs-6 text-left">
                                    <button type="button" id="btn_rde" class="btn btn-danger">Read data from EEPROM
                                    </button>
                                </div>
                            </div>
                            <div id="outputCommand">COMMAND: 00000000</div>
                            <div id="outputSpeed">SPEED: 10000000</div>
                            <div id="outputLog"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2" id="sidebar2">
                </div>
            </div>


        </div>
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script type="text/javascript" src="static/js/jquery-1.11.3.min.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script type="text/javascript" src="static/js/bootstrap.min.js"></script>


        <script type="text/javascript" src="static/js/raphael-2.1.4.min.js"></script>
        <script type="text/javascript" src="static/js/justgage.js"></script>


        <script type="text/javascript" src="static/js/jquery.gracefulWebSocket.js"></script>


        <script type="text/javascript" src="static/js/main.js"></script>


    </body>
</html>